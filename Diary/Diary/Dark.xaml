<!-- Темная тема -->
    
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Diary">
    <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.grey.xaml" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.LightBlue.xaml" />
        
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="ControlsBackgroundStyle">
        <Setter Property="UserControl.Background" Value="#36393E"/>
    </Style>

    <Style x:Key="BackgroungMenu">
        <Setter Property="UserControl.Background" Value="#36393E"/>
    </Style>

    <SolidColorBrush x:Key="ForegroundColor" Color="#FF5C99D6"/>
    <SolidColorBrush x:Key="ForegroundMenuColor" Color="#FF5C99D6"/>
    <SolidColorBrush x:Key="BorderColor" Color="#FFE0E0E0"/>
    
</ResourceDictionary>